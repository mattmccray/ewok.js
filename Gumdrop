#puts "Gumdrop v#{Gumdrop::VERSION} building..."

configure do

  set :site_title,   "Ewok.js"
  set :site_tagline, "Yub Nub!"
  set :site_author,  "Matt McCray"
  set :site_url,     "https://github.com/darthapo/ewok.js"
  
  set :output_dir, "./dist"
  set :source_dir, "./src"

end

#  Skip files from build process... Like they don't exist.
skip 'ewok/*'
skip 'dist/*'

#  Ignore files from compilation, but does load the content into memory (for serving)
ignore 'index.html'

generate do

  sprockets 'ewok.js', :src=>'ewok.js', :paths=>['./lib'], :prune=>false, :root=>'./src', :compress=>:jsmin

  sprockets 'ewok-debug.js', :src=>'ewok-debug.js', :paths=>['./lib'], :prune=>false, :root=>'./src', :compress=>false

  sprockets 'ewok-only.js', :src=>'ewok-only.js', :paths=>['./lib'], :prune=>false, :root=>'./src', :compress=>:jsmin
  
  # For running test in serve mode
  sprockets 'dist/ewok-debug.js', :src=>'ewok-debug.js', :paths=>['./lib'], :prune=>false, :root=>'./src', :compress=>false
   
end

on_end do |site|
  src= File.expand_path './dist/test'
  tgt= File.expand_path './test'
  if Dir.exist? src
    require 'fileutils'
    FileUtils.rm_rf tgt
    FileUtils.mv src, tgt
    site.report "[Moved ./dist/test to ./test]"
  end
end


require 'slim'
Slim::Engine.set_default_options pretty:true
